{
  "Version": "2012-10-17",
  "Statement": [
    { "Effect": "Allow", "Action": ["dynamodb:PutItem","dynamodb:GetItem","dynamodb:Query","dynamodb:Scan","dynamodb:UpdateItem"], "Resource": ["arn:aws:dynamodb:*:*:table/*"] },
    { "Effect": "Allow", "Action": ["s3:PutObject","s3:GetObject","s3:ListBucket"], "Resource": ["arn:aws:s3:::*"] },
    { "Effect": "Allow", "Action": ["logs:CreateLogStream","logs:PutLogEvents","logs:CreateLogGroup"], "Resource": ["arn:aws:logs:*:*:*"] },
    { "Effect": "Allow", "Action": ["elasticache:Describe*"], "Resource": ["*"] },
    { "Effect": "Allow", "Action": ["ssm:GetParameter","ssm:GetParameters","ssm:GetParametersByPath"], "Resource": ["arn:aws:ssm:*:*:parameter/api/*"] }
  ]
}
